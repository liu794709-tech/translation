<Window x:Class="translation.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ResultWindow" Height="150" Width="400"
        
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" 
        >
    <!-- SizeToContent 属性会让窗口大小自动适应内容 -->

    <Border Background="#DD000000" CornerRadius="5" Padding="10" Margin="15">
        <!-- Background: 半透明黑色背景, CornerRadius: 圆角, Padding: 内边距, Margin: 外边距(用于阴影) -->
        <Border.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="Black" Opacity="0.5"/>
        </Border.Effect>

        <TextBlock x:Name="ResultTextBlock"
                   Foreground="White"
                   FontSize="16"
                   TextWrapping="Wrap"
                   MaxWidth="500">
            <!-- Foreground: 前景色(白色), FontSize: 字体大小, TextWrapping: 自动换行 -->
        </TextBlock>
    </Border>
</Window>